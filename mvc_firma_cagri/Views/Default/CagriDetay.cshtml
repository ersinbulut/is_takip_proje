@model List<mvc_firma_cagri.Models.TblCagriDetay>
@{
    ViewBag.Title = "CagriDetay";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-telephone-forward-fill"></i> Çağrı Detayları
            </h4>
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>

                                <td>
                                    @item.Aciklama
                                </td>

                                <td>
                                    @item.Tarih.ToString()
                                </td>

                                <td>
                                    @item.Saat
                                </td>
                                
                                <td>
                                    <a href="/Cagri/Detay/@item.ID" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="/Cagri/Sil/@item.ID" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <a href="/Default/YeniCagri/" class="btn btn-primary">Yeni Çağrı Ekle</a>
            </div>

        </div>
    </div>
</div>
