@model List<mvc_firma_cagri.Models.TblCagrilar>
@{
    ViewBag.Title = "PasifCagrilar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-telephone-forward-fill"></i> Pasif Çağrılar
            </h4>
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Firma</th>
                            <th>Konu</th>
                            <th>Açıklama</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>

                                <td>
                                    @item.TblFirmalar.Ad
                                </td>

                                <td>
                                    <strong>@item.Konu</strong>
                                </td>

                                <td>
                                    @(item.Aciklama.Length > 40
                                      ? item.Aciklama.Substring(0, 40) + "..."
                                      : item.Aciklama)
                                </td>

                                <td>
                                    @item.Tarih.ToString()
                                </td>

                                <td>
                                    @if (item.Durum == true)
                                    {
                                        <span class="badge bg-success px-3 py-2">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Default/CagriDetay/@item.ID" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="/Default/CagriSil/@item.ID" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <a href="/Default/YeniCagri/" class="btn btn-primary">Yeni Çağrı Ekle</a>
            </div>

        </div>
    </div>
</div>
